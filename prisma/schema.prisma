generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  phone     String?
  linkedin  String?
  github    String?
  portfolio String?
  createdAt DateTime @default(now())

  // Relationships
  companies    Company[] // companies this user owns
  applications Application[] // jobs this user applied to
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  logo      String
  createdAt DateTime @default(now())

  // Relations
  ownerId Int
  owner   User  @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  jobs    Job[]

  @@index([ownerId])
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  location    String?
  salary      String?
  postedDate  DateTime  @default(now())
  expireDate  DateTime?
  url         String    @unique

  // Relations
  companyId    Int
  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([companyId])
}

model Application {
  id          Int      @id @default(autoincrement())
  fullName    String
  email       String
  phone       String?
  linkedin    String?
  github      String?
  portfolio   String?
  coverLetter String?
  resumeUrl   String
  createdAt   DateTime @default(now())

  // Relations
  jobId  Int
  job    Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId], name: "uniq_job_user") // user can apply once per job
  @@index([jobId, userId])
}
